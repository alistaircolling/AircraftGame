			<s:Label id="title" styleName="supportInfoTitle" width="700" text="LOREM IPSUM"/>
			<s:Spacer height="25"/>
			<s:Label id="body" styleName="supportInfoBody" width="700" text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. "/>
		</s:VGroup>
		<s:Button skinClass="view.skins.ArrowButtonSkin" id="btn" right="13" bottom="10" rotation="180" width="40" height="40" click="btn_clickHandler(event)" alpha="1" useHandCursor="true" buttonMode="true"/>
	</s:Group>
</s:Group>
