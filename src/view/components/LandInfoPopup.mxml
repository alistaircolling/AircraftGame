	<fx:Script>
		<![CDATA[
			import events.LeverEvent;
			
			import view.skins.ArrowButtonSkin;
			protected function btn_clickHandler(event:MouseEvent):void
			{
				trace("close video button clicked");
				var e:LeverEvent = new LeverEvent(LeverEvent.HIDE_VIDEO);
				dispatchEvent(e);
			}
		]]>
	</fx:Script>
